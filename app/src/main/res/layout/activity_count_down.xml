<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_count_down"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ecomoter.myapplication.spalashview.CountDownActivity">

    <ecomoter.myapplication.spalashview.CountDownView
        android:id="@+id/cd_view"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <ecomoter.myapplication.spalashview.MyTextView
        android:id="@+id/myTv"
        android:layout_width="200dp"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/btn_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="loading"/>

</LinearLayout>
